#!/bin/bash
# ---------------------------------------------------------------------------
#
# Hilfsprogramm f체r die Erstellung eines Images f체r den Raspbian-Netinstaller.
#
# Muss als root laufen.
#
# Autor: Bernhard Bablok
# Lizenz: GPL3
#
# Website: https://github.com/bablokb/fuchsfalle
#
# ---------------------------------------------------------------------------

NETINST_VERSION="v1.4.1"
NETINST_SRC="https://github.com/FooDeas/raspberrypi-ua-netinst/releases/download/${NETINST_VERSION}/raspberrypi-ua-netinst-${NETINST_VERSION}.img.bz2"
IMG="fuchsfalle.img"

# --- Download des Images   -------------------------------------------------

rm -f "$IMG"
[ ! -f "netinstall.img.bz2" ] && wget -O "netinstall.img.bz2" "$NETINST_SRC"
bunzip2 -c "netinstall.img.bz2" > "$IMG"

# --- Image per Loop-Device mounten   ---------------------------------------

modprobe loop
kpartx -va "${IMG}"
partprobe
mount /dev/mapper/loop0p1 /mnt

# --- Projektdateien kopieren   ---------------------------------------------

cp -va --no-preserve=ownership \
                   "$(dirname $0)/../netinstall/" /mnt/raspberrypi-ua-netinst

# --- Aufr채umarbeiten   -----------------------------------------------------

umount /mnt
kpartx -vd "${IMG}"

# --- und Ende ...   --------------------------------------------------------

echo "Netinstaller-Image $IMG erstellt. Wie 체blich auf SD-Karte kopieren"
